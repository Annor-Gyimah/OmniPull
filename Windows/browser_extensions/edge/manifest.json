{
  "manifest_version": 3,
  "name": "OmniPull Downloader",
  "short_name": "OmniPull",
  "version": "1.0",
  "description": "Send download links to OmniPull desktop app",
  "action": {
    "default_icon": "icons/logo4.png",
    "default_title": "Send to OmniPull"
  },
  "permissions": [
    "contextMenus",
    "nativeMessaging",
    "notifications",
    "scripting"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["*://*/*"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  "icons": {
    "128": "icons/logo4.png"
  }
}
