{
  "manifest_version": 3,
  "name": "OmniPull",
  "version": "1.0.4",
  "description": "Send links/streams to OmniPull native app",
  "icons": {
    "16": "icons/logo4.png",
    "32": "icons/logo4.png",
    "48": "icons/logo4.png",
    "128": "icons/logo4.png"
  },
  "permissions": [
    "activeTab",
    "contextMenus",
    "nativeMessaging",
    "notifications",
    "storage"
  ],
  "host_permissions": ["<all_urls>"],
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "action": {
    "default_title": "OmniPull"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["icons/logo4.png"],
      "matches": ["<all_urls>"]
    }
  ]
}
