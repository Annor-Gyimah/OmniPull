{
  "manifest_version": 2,
  "name": "OmniPull",
  "version": "1.1",
  "description": "Send links/streams to OmniPull native app",
  "icons": {
    "16": "icons/logo4.png",
    "32": "icons/logo4.png",
    "48": "icons/logo4.png",
    "128": "icons/logo4.png"
  },

  "background": {
    "scripts": ["background.js"]
  },

  "permissions": [
    "activeTab",
    "contextMenus",
    "nativeMessaging",
    "notifications",
    "<all_urls>"
  ],

  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],

  "browser_specific_settings": {
    "gecko": {
      "id": "{e899b50f-2a29-4bad-ab4d-b192447a10d0}"
    }
  },

  "web_accessible_resources": [
    "icons/logo4.png"
  ]
}
